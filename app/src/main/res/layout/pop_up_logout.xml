<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="32dp"
    app:cardCornerRadius="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:id="@+id/ImgLogoutsSuccess"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_power_settings_new_black_24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/TvLogoutName"
        />

        <TextView
            android:id="@+id/TvLogoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Keluar Akun?"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ImgLogoutsSuccess"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/TvLogoutSuccessKet"
            />
        <TextView
            android:id="@+id/TvLogoutSuccessKet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Apakah Anda yakin ingin keluar akun?"
            android:textAlignment="center"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TvLogoutName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/BtnLogoutNo"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BtnLogoutYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Iya"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toTopOf="@id/BtnLogoutNo"
            app:layout_constraintLeft_toRightOf="@id/BtnLogoutNo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/BtnLogoutNo"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/BtnLogoutNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorPrimaryDark"
            android:text="Tidak"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/TvLogoutSuccessKet"
            app:layout_constraintRight_toLeftOf="@id/BtnLogoutYes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>